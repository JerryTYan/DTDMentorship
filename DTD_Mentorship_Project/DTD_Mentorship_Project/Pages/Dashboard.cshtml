@page "/Dashboard"
@model DashboardModel



<!DOCTYPE html>
<main>



    <style>

        .custom h5 {
            margin: 0.5rem 0;
            font-size: 1.0rem;
            font-weight: var(--h2-weight);
            line-height: 2;
            font-family: var(--h2-font);
            color: var(--primary-t-color);
            -ms-word-wrap: break-word;
            word-wrap: break-word;
            color: white;
        }

        .custom .icon {
            font-size: 24px;
        }

        .list-group-item {
            border-color: #191919 !important;
        }
    </style>

    <section id="content" class="section-3 odd ">



        <nav class="d-flex d-md-none navbar navbar-expand-lg navbar-dark primary-color w-100 d-flex justify-content-between visible">

            <!-- Navbar brand -->
            <div>

                <!-- Collapse button -->
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#basicExampleNav" aria-controls="basicExampleNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>


            <!-- Collapsible content -->
            <!-- Collapsible content -->
        </nav>

        <div class="collapse navbar-collapse w-100 " style="z-index:1000;" id="basicExampleNav">

            <!-- Links -->
            <ul class="list-group position-absolute bg-dark  w-100 list-group-flush pl-3 pr-3" style="z-index:1000;">
                <li class="list-group-item custom pr-3">
                    <a class="custom d-block" href="/Profile/Dashboard"><i class="icon icon-home d-inline ml-3"></i><b class="text-white">Home</b></a>
                </li>
                <li class="list-group-item custom pr-3">
                    <a class="custom d-block" href="/Profile/Profile"><i class="icon icon-user d-inline ml-3"></i><b class="text-white">Edit Profile</b></a>

                </li>
                <li class="list-group-item custom pr-3">
                    <a class="custom d-block" href="/Profile/MyPathways"><i class="icon icon-direction d-inline ml-3"></i><b class="text-white">My Pathways</b></a>

                </li>
                <li class="list-group-item">
                    <a class="custom d-block" href="/Profile/Services"><i class="icon icon-screen-desktop d-inline ml-3"></i><b class="text-white">Services</b></a>

                </li>
                <li class="list-group-item">
                    <a class="custom d-block" href="/Profile"><i class="icon icon-screen-desktop d-inline ml-3"></i><b class="text-white">Resources</b></a>

                </li>
                <li class="list-group-item custom pr-3">
                    <a class="custom d-block" href="/Account/Logout"><i class="icon icon-login d-inline ml-3"></i><b class="text-white">Logout</b></a>

                </li>
            </ul>
        </div>
        <div class="container">
            <div class="row content">
                <!-- Sidebar -->
                <div class="d-none d-md-block col-12 col-md-3 pl-md-3 p-0 float-left sidebar">
                    <div class="row">
                        <div class="col-12 align-self-center text-left">


                            <!-- Widget [services] -->
                            <div class="item widget-services">
                                <ul class="list-group list-group-flush widget-services">
                                    <li class="list-group-item pt-0" style="border-top:0px !important">
                                        <a class="ml-0 custom" href="/Profile/Dashboard"><i class="icon icon-home mr-3"></i><h5> Home</h5></a>

                                    </li>
                                    <li class="list-group-item">
                                        <a class="custom" href="/Profile/Profile"><i class="icon icon-user mr-3"></i><h5> Edit Profile</h5></a>

                                    </li>
                                    <li class="list-group-item">
                                        <a class="custom" href="/Profile/MyPathways"><i class="icon icon-direction mr-3"></i><h5> My Pathways</h5></a>

                                    </li>
                                    <li class="list-group-item">
                                        <a class="custom" href="/Profile/Services"><i class="icon icon-screen-desktop mr-3"></i><h5> Services</h5></a>

                                    </li>
                                    <li class="list-group-item">
                                        <a class="custom d-block" href="/Profile"><i class="icon icon-screen-desktop d-inline mr-3"></i><b class="text-white">Resources</b></a>

                                    </li>
                                    <li class="list-group-item">
                                        <a class="custom" href="/Account/Logout"><i class="icon icon-login mr-3"></i><h5> Logout</h5></a>

                                    </li>


                                </ul>
                            </div>



                        </div>
                    </div>
                </div>
                <!-- Main -->
                <main class="col-12 col-md-9 p-0">

                    <!-- Text -->
                    <div class="row">
                        <div class="col-12 align-self-center">




                            <!--<h2 class="featured ml-0">Profile Home</h2>-->

                            <div class="row mt-4 mt-md-0">

                                <div class="col-4 col-md-3 mb-4 text-center">
                                    <img class="card-img-top rounded" src="/assets/images/user.png" alt="user image">
                                    <a href="/Profile/AvatarList"><small class="d-block mt-2">Choose Avatar</small></a>
                                </div>
                                <div class="col-8 col-md-9 mb-4">
                                    <h5 class="featured mt-0 mb-2">John Doe</h5>
                                    <div class="col-12 p-0">

                                    </div>
                                    <ul class="dtd-li">
                                        <li>District 1</li>
                                        <li>My progress: 0%</li>
                                    </ul>


                                </div>
                            </div>
                            <div class="row">


                                <div class="col-md-12 col-sm-12 mb-12">


                                    @foreach(var mentee in Model.CurrentMentees)
{
                                    <div class="card">
                                        <div class="card-body">
                                            <h5 class="card-title">@mentee.Name</h5>
                                            <p class="card-text">Some info about this mentee...</p>
                                            <button class="btn btn-danger" onclick="showConfirmationPopup('@mentee.Name')">Remove</button>
                                        </div>
                                    </div>
}
                                    <script>
                                        function showConfirmationPopup(menteeName) {
                                            var reason = prompt("Why do you want to remove " + menteeName + "?");
                                            if (reason) {
                                                // The user entered a reason, perform the removal logic here
                                                // For example, you can make an AJAX request to the server to remove the mentee
                                            }
                                        }
                                    </script>

                                </div>
                            </div>
                            <div class="container">
                                <h2>About me</h2>
                                <p>@Model.AboutMe</p>
                            </div>

                            <script>
                                $(document).ready(() => {

                                    checkDes('pathwayDetail', 'pathwayID');

                                })
                            </script>
                        </div>
                    </div>

                </main>


            </div>
        </div>
    </section>

</main>