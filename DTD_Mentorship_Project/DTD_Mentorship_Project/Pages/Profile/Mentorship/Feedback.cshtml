@page "/Profile/Mentorship/Feedback"
@model DTD_Mentorship_Project.Pages.FeedbackModel

<main class="container mt-4">
    <h2 class="mt-0 d-flex d-md-block text-center">Mentor Feedback</h2>

    <div class="row mt-3 dark-button text-white">
        <div class="col-md-4 my-3">
            <img src="@Model.CurrentMentor.Image" class="img-fluid" alt="Mentor Image">
        </div>

        <div class="col-md-8 my-3">
            <h3>@Model.CurrentMentor.Name</h3>
            <h4>@Model.CurrentMentor.Area</h4>
            <p class="lead">@Model.CurrentMentor.Title</p>
            <p>
                Lorem ipsum dolor sit amet... 
            </p>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col text-right">
            <a href="/Profile/Mentorship" class="btn btn-secondary">Back</a>
            <a href="/Profile/Mentorship/Feedback/FeedbackForm?image=@Model.CurrentMentor.Image&name=@Model.CurrentMentor.Name&description=@Model.CurrentMentor.Description&title=@Model.CurrentMentor.Title&area=@Model.CurrentMentor.Area" class="btn dark-button">Review</a>
        </div>
    </div>
</main>
