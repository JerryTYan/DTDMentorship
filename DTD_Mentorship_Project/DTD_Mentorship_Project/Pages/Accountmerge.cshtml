@page "/accountmerge"
@model DTD_Mentorship_Project.Pages.AccountmergeModel




	
	



		
            <main>

<div class="col-12 align-self-center">	

<h1 >
Merge your account
</h1>
<div class="row ">
		 
<div class="form-group col-12 col-md-6">
                    <label for="FieldofWork">* Field of Work</label>
