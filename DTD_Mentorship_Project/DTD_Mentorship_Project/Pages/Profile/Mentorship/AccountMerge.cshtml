@page "/Profile/Mentorship/AccountMerge"
@model DTD_Mentorship_Project.Pages.AccountmergeModel

<main>


	<h2 class="mt-0 d-flex d-md-block text-center">
		Apply for a Mentor Account
	</h2>
	<div class="row">

		<div class="form-group col-12 col-md-6">
			<label for="FieldofWork">* Field of Work</label>
			<input class="form-control" type="text" id="FieldofWork" name="FieldofWork" value="" required>
			<span class="text-danger font-weight-bold field-validation-valid" data-valmsg-for="FieldofWork" data-valmsg-replace="true"></span>
		</div>
		<div class="form-group col-12 col-md-6">
			<label for="Company">* Company</label>
			<input class="form-control" type="text" id="Company" name="Company" value="" required>
			<span class="text-danger font-weight-bold field-validation-valid" data-valmsg-for="Company" data-valmsg-replace="true"></span>
		</div>


		<div class="form-group col-12 col-md-6">
			<label for="Degree">* Degree</label>
			<input class="form-control" type="text" id="Degree" name="Degree" value="" required>
			<span class="text-danger font-weight-bold field-validation-valid" data-valmsg-for="Degree" data-valmsg-replace="true"></span>
		</div>

		<div class="form-group col-12 col-md-6">
			<label for="Availability">* Availability</label>
			<input class="form-control" type="date" id="Availability" name="Availablity" value="" required>
		</div>

		<div class="form-group mt-3">
			<label> In a short paragraph, describe why you would like to apply and become a mentor.</label>

			<textarea id="freeform" name="freeform" rows="4" cols="50"></textarea>
		</div>

		<div class="form-group mt-34">
			<input type="checkbox" id="TermsofServiceCheckbox"/>
			<label for="TermsofService">
				When applying as a mentor, I agree to the <a href="/TOS">Terms and Conditions</a> of Delete the Divide*
			</label>
		</div>

		<div class="form-group mt-3">
			<a class="btn dark-button" type="submit" href="/Account/Submission">Submit</a>
		</div>
	</div>
</main>



